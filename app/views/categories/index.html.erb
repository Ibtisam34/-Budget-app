<nav class="mycategs">
  <ul class="categs">
    <li>
      <%= link_to '', root_path, class: "arrow-left" %>
    </li>
    <li>
      <h1 class="txt">Categories</h1>
    </li>
    <li>
      <%= button_to 'LOG OUT', destroy_user_session_path, method: :delete, class: "destry" %>
    </li>
  </ul>
</nav>
<% @categories.each do |category| %>
  <%= link_to category_path(category) do %>
    <div class="section-container">
      <div class="icon">
       <div class="image">
        <% if category.icon.attached?%>
              <%= image_tag(category.icon) %>
            <%else%>
              <%= image_tag('group.png') %>
            <%end%>
            </div>
      </div>

      <div class="name-time">
        <p class="categories-name"><%= category.name %></p>
        <span class="date"><%= category.created_at.strftime(" 7 Apr 2023") %></span>
      </div>

      <div class="left">
        <div class="sum-delete">
          <p class="sum">Sum: $<%= category.payments.sum(:amount)%></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="addnew">
  <%= link_to "Add New Category", new_category_path, class: "addnew2" %>
</div>