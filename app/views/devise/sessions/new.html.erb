<nav class="first">
  <ul class="second">
    <li class="arrow-left">
      <%= link_to '<', new_registration_path(resource_name), class: "arrow-left" %>
    </li>
    <li>
      <h2 class="logs">LOGIN</h2>
    </li>
    <li>
      <i class="d-none">Log in</i>
    </li>
  </ul>
</nav>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "email1" %>
  </div>
  <hr />
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password(6 characters)", class: "password1" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'none' %>
      <%= f.label :remember_me, class: 'none' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'signup1' %>
  </div>
<% end %>